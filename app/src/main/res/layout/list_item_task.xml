<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="100px">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="5px"
        android:layout_height="42dp"
        android:padding="@dimen/task_item_padding"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_not_check_foreground"
        tools:srcCompat="@drawable/ic_not_check_foreground" />

    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>